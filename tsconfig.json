{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "src",
    "paths": {
      "@types": ["types"],
      "@helper": ["helper"],
      "@pages": ["pages"],
      "@data": ["data"],
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}